{
  "manifest_version": 3,
  "name": "Word Saver",
  "version": "1.0",
  "description": "Highlight and save words",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_popup": "popup.html",
    "default_icon": "icon16.png"

    }
  }

